@{
    ViewData["Title"] = "Agenda";
}

@section Styles{ 
    <link href="~/css/agenda.css" rel="stylesheet" />
}

<section class="ftco-section contact-section ftco-degree-bg">
    <div class="container">
        <div class="row d-flex mb-5 contact-info">
            <div class="col-12 mb-4">
                <h2 class="h4">Agenda - Felipe Alves</h2>
            </div>
        </div>
        <div class="row block-9">
            <div id="calendario" class="col-md-8">
                <div id="cabecalho" class="row">
                    <div id="mes">
                        <div class="col-md-2">
                            <i class="icon-arrow-left btnAnterior" title="Mês anterior"></i>
                        </div>
                        <div class="col-md-8">
                            <span class="nome-mes">Outubro</span>
                        </div>
                        <div class="col-md-2">
                            <i class="icon-arrow-right btnProximo" title="Mês seguinte"></i>
                        </div>
                    </div>
                    <div id="semana">
                        <div class="nome-dia">
                            Dom
                        </div>
                        <div class="nome-dia">
                            Seg
                        </div>
                        <div class="nome-dia">
                            Ter
                        </div>
                        <div class="nome-dia">
                            Qua
                        </div>
                        <div class="nome-dia">
                            Qui
                        </div>
                        <div class="nome-dia">
                            Sex
                        </div>
                        <div class="nome-dia">
                            Sab
                        </div>
                    </div>
                </div>
                <div id="corpo" class="row">
                    <div class="dia-semana" data-dia="27" data-ocupacao="80"></div>
                    <div class="dia-semana" data-dia="28" data-ocupacao="100"></div>
                    <div class="dia-semana" data-dia="29" data-ocupacao="30"></div>
                    <div class="dia-semana" data-dia="30"></div>
                    @for (int i = 1; i <= 31; i++)
                    {
                        <div class="dia-semana" data-dia="@i"></div>
                    }
                </div>
            </div>
            <div id="detalhes" class="col-md-4">
                <div id="cabecalho" class="row px-5">
                    <div id="dia" class="col-12">
                        <span class="nome-dia">Dia 30/10/2020</span>
                    </div>
                    <div id="status" class="col-12">
                        <small>45% disponível</small>
                    </div>
                </div>
                <div id="horario" class="row px-4">
                    @for (int i = 1; i <= 12; i++)
                    {
                        <div class="hora" data-horario="@i:00">
                            <div class="meia-hora"></div>
                            <div class="meia-hora"></div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>

<section class="ftco-section-parallax">
    <div class="parallax-img d-flex align-items-center">
        <div class="container">
            <div class="row d-flex justify-content-center">
                <div class="col-md-7 text-center heading-section heading-section-white ftco-animate">
                    <h2>Subcribe to our Newsletter</h2>
                    <p>Far far away, behind the word mountains, far from the countries Vokalia and Consonantia, there live the blind texts. Separated they live in</p>
                    <div class="row d-flex justify-content-center mt-5">
                        <div class="col-md-8">
                            <form action="#" class="subscribe-form">
                                <div class="form-group d-flex">
                                    <input type="text" class="form-control" placeholder="Enter email address">
                                    <input type="submit" value="Subscribe" class="submit px-3">
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts{
    <script src="~/js/Paginas/agenda.js"></script>
}